<!-- filename: slideshow.liquid -->
{% comment %}
** Slideshow - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% comment %}Is the color set to transparent?{% endcomment %}
{% assign mobile_text_alpha = section.settings.mobile_text_color | color_extract: 'alpha' %}

{% comment %}Section specific CSS{% endcomment %}
{% style %}
  @media only screen and (max-width: 480px) {
    #shopify-section-{{ section.id }} .pretext,
    #shopify-section-{{ section.id }} .headline,
    #shopify-section-{{ section.id }} .subtitle {
      color: {% if mobile_text_alpha != 0 %}{{ section.settings.mobile_text_color}}{% endif %};
    }
  }
{% endstyle %}

{% if section.settings.wide_display == false %}
<div class="container">
  <div class="sixteen columns">
{% endif %}


  <section  id="homepage_slider-{{section.id}}"
        class="section banner homepage-slideshow js-homepage-slideshow slideshow_animation--{{ section.settings.slideshow_animation_1 }} {% if section.settings.slideshow_text_animation_1 != '' %}text-animation--true{% else %}text-animation--false{% endif %} transparentBackground--{{settings.slideshow_button_style}}
        full-width--{{ section.settings.wide_display_1 }}"
        data-slider-id="homepage_slider-{{section.id}}"
        data-slideshow-speed="{% if section.settings.slideshow_speed_1 %}{{section.settings.slideshow_speed_1}}{% else %}{{section.settings.slideshow_speed}}{% endif %}"
        data-slideshow-text-animation="{{section.settings.slideshow_text_animation_1}}"
        data-adaptive-height="{{section.settings.activate_adaptiveHeight_1}}"
        >
    
{% unless section.settings.image_1 == nil %}  
      {% assign mobile_crop = 'mobile-banner--crop-' | append: section.settings.mobile_image_crop_1 %}

        <div class="gallery-cell slide-1" {{ section.shopify_attributes }} data-block-id="{{section.id}}">
        {% if section.settings.image_1 != nil %}
			<div class="img-responsive">
              <a href="{{ section.settings.image_1_link }}">
          		<img src="{{ section.settings.image_1 | img_url: 'master' }}" class="e-web">
              	<img src="{{ section.settings.imagem_1 | img_url: 'master' }}" class="e-mobile">
              </a>
			</div>
        {% endif %}

        </div>
{% endunless %}
{% unless section.settings.image_2 == nil %}  
 {% assign mobile_crop = 'mobile-banner--crop-' | append: section.settings.mobile_image_crop_1 %}
            <div class="gallery-cell slide-2" {{ section.shopify_attributes }} data-block-id="{{section.id}}">
        {% if section.settings.image_2 != nil %}
			<a href="{{ section.settings.image_2_link }}"> 
          	<img src="{{ section.settings.image_2 | img_url: 'master' }}" class="e-web">
			<img src="{{ section.settings.imagem_2 | img_url: 'master' }}" class="e-mobile">
              </a>
        {% endif %}


        </div>

{% endunless %}
{% unless section.settings.image_3 == nil %}      
     {% assign mobile_crop = 'mobile-banner--crop-' | append: section.settings.mobile_image_crop_1 %}
            <div class="gallery-cell slide-3" {{ section.shopify_attributes }} data-block-id="{{section.id}}">
        {% if section.settings.image_3 != nil %}
			<a href="{{ section.settings.image_3_link }}"> 
          <img src="{{ section.settings.image_3 | img_url: 'master' }}" class="e-web">
			<img src="{{ section.settings.imagem_3 | img_url: 'master' }}" class="e-mobile">
</a>
        {% endif %}


        </div>
    
    
{% endunless %}
{% unless section.settings.image_4 == nil %}  
     {% assign mobile_crop = 'mobile-banner--crop-' | append: section.settings.mobile_image_crop_1 %}
            <div class="gallery-cell slide-4" {{ section.shopify_attributes }} data-block-id="{{section.id}}">
        {% if section.settings.image_4 != nil %}
			<a href="{{ section.settings.image_4_link }}"> 
          <img src="{{ section.settings.image_4 | img_url: 'master' }}" class="e-web">
			<img src="{{ section.settings.imagem_4 | img_url: 'master' }}" class="e-mobile">
              </a>
        {% endif %}


        </div>
 {% endunless %}
{% unless section.settings.image_5 == nil %}     
     {% assign mobile_crop = 'mobile-banner--crop-' | append: section.settings.mobile_image_crop_1 %}
    
            <div class="gallery-cell slide-5" {{ section.shopify_attributes }} data-block-id="{{section.id}}">
        {% if section.settings.image_5 != nil %}
		<a href="{{ section.settings.image_2_link }}"> 
          <img src="{{ section.settings.image_5 | img_url: 'master' }}" class="e-web">
			<img src="{{ section.settings.imagem_5 | img_url: 'master' }}" class="e-mobile">
              </a>
        {% endif %}

        </div>
    
{% endunless %}
   
    
    
    
	
  </section>


{% if section.settings.wide_display == false %}
  </div>
</div>
{% endif %}

<style>
  .stars{
  display:none;
  }
  .img-responsive img{
	width:100%;
  }
  .homepage-slideshow .gallery-cell .e-web{
  	display:block;
  }
  .homepage-slideshow .gallery-cell .e-mobile{
    display:none;
  }
  @media only screen and (max-width:480px){
    .homepage-slideshow .gallery-cell .e-web{
      display:none;
    }
    .homepage-slideshow .gallery-cell .e-mobile{
      display:block;
    }
    .homepage-slideshow .flickity-prev-next-button{
    	opacity:1;
    }
  }
  .homepage-slideshow.section{
  	max-width:100% !important;;
  }
</style>