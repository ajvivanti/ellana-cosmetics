<!-- filename: include-quote.liquid -->
{% comment %}
** Quote - dynamic **
- Draggable section
{% endcomment %}

{% comment %} Assign object as block or section {% endcomment %}
{% if type == 'block' %}
  {%- assign object = block -%}
{% else %}
  {%- assign object = section -%}
{% endif %}

<div class="section">
  <div class="container">
    <div class="one-whole column">
      <a href="{{ quote_link }}"><div class="quote__text">
        {{ object.settings.quote_text }}
      </div>
      </a>
    </div>
  </div>
</div>
